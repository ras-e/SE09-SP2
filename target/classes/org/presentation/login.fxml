                                <Label layoutX="81.0" layoutY="74.0" prefHeight="43.0" prefWidth="95.0" text="Sign in">
                                    <font>
                                        <Font name="System Bold" size="22.0" />
                                    </font>
                                </Label>
                            </children>
                        </Pane>
                    </children>
                </StackPane>
            </center>
        </BorderPane>
    </children>
